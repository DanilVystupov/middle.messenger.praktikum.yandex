<div class="page-sign-up">
  {{#> Form}}
    {{#*inline "title"}}
      Регистрация
    {{/inline}}

    {{#*inline "fields"}}
      {{> Input label="Почти" type="text" placeholder="pochta@yandex.ru" }}
      {{> Input label="Логин" type="text" placeholder="ivanivanov" }}
      {{> Input label="Имя" type="text" placeholder="Иван" }}
      {{> Input label="Фамилия" type="text" placeholder="Иванов" }}
      {{> Input label="Телефон" type="text" placeholder="+7 (800) 800 80 80" }}
      {{> Input label="Пароль" type="password" placeholder="Пароль" autocomplete="current-password" }}
      {{> Input label="Пароль (ещё раз)" type="password" placeholder="Пароль (ещё раз)" autocomplete="current-password" }}
    {{/inline}}

    {{#*inline "controls"}}
      {{> Button text="Зарегистрироваться" type="primary" }}

      <a href="#" data-page="login">
        Войти
      </a>
    {{/inline}}
  {{/Form}}
</div>
