.base-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  row-gap: 15px;

  ul {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    row-gap: 8px;
  }

  li {
    padding: 10px;
    background-color: var(--blue);
    border-radius: 12px;

    a {
      color: #fff;
    }
  }
}
